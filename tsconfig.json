    "moduleResolution": "bundler",
    "allowJs": false,
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // âœ… modern alias (use via vite instead of baseUrl/paths)
