{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // ✅ Added lines
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // ✅ Silence the TypeScript 7 notice
    "ignoreDeprecations": "6.0"
  },
  "include": ["src", "declarations.d.ts"]
}
